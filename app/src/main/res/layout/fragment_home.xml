<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/autoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите данные для авторизациии"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/autoLoginTitle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Логин"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/autoTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"/>

    <TextView
        android:id="@+id/autoPasswordTitle"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Пароль"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/autoLoginTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"/>

    <EditText
        android:id="@+id/autoLoginEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/autoTitle"
        app:layout_constraintStart_toEndOf="@id/autoLoginTitle"
        android:layout_marginStart="10dp"/>

    <EditText
        android:id="@+id/autoPasswordEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/autoLoginEdit"
        app:layout_constraintStart_toEndOf="@id/autoPasswordTitle"
        android:layout_marginStart="10dp"/>

    <Button
        android:id="@+id/autoSendButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="10dp"
        android:text="Ввести"
        app:layout_constraintTop_toBottomOf="@id/autoPasswordEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"        />

</androidx.constraintlayout.widget.ConstraintLayout>